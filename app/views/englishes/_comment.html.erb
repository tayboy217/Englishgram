<table>
  <% english.book_comments.each do |book_comment| %>
    <% book_comment_user = book_comment.user %>
    <tr>
    	<td>
    		<%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
      		<%= attachment_image_tag book_comment_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
      		<%= book_comment_user.username %>
    		<% end %>
    	</td>
    	<td><%= book_comment.content %></td>
    	<% if current_user == book_comment_user %>
      	<td><%= link_to 'Destroy',  english_book_comment_path(book_comment.english_id, book_comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
    	<% end %>
    </tr>
  <% end %>
 <p style="text-align: center ">
  <%= form_with model:[english,book_comment], local: true do |f| %>
  <%= f.text_area :book_comment, size:"90x5" %><br>
 
  <%= f.submit '送信'%>
 <% end %>
  </p>
</table>
