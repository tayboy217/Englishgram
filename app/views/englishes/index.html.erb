<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Post List
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @englishes.each do |english| %>
       <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to english_path(english) do %>
                <%= attachment_image_tag english, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= link_to user_path(english.user.id) do %>
                    <%= attachment_image_tag english.user, :profile_image, fallback: "no-image.png" %>
                    <% end %>
                  </figure>
                 </div>
                 <div class="media-content">
                  <div class="title"><%= link_to english.user.username,user_path(english.user.id) %></div>
                  </div>
                 </div>
                <div class="content">
                <time><%= english.updated_at.strftime("%Y-%m-%d %H:%M") %></time>Update
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
