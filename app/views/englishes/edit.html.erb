<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Post Edit
      </h1>
    </div>
  </div>
</section>

<% if @english.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@english.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @english.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @english, local: true do |f| %>
        <div class="field">
          <%= f.label :title, "Title", class: "label" %>
          <%= f.text_field :title, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :body, "Example", class: "label" %>
          <%= f.text_area :body, class: "textarea" %>
        </div>
        <div class="field">
          <%= f.label :image, "Photo", class: "label" %>
          <%= f.attachment_field :image, class: "input" %>
        </div>
          <%= f.submit 'Update', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>