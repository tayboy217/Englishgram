<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        English Learners
      </h1>
    </div>
  </div>
</section>
<div class="container" style="margin-top: 20px;">
  <div class="row">
    <% if user_signed_in? %>
      <%= form_tag(searches_search_path, method: :get) do %>
        <%= text_field_tag 'content' %>
        <%= select_tag 'model', options_for_select({ "User" => "user"}) %>
        <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
        <%= submit_tag '検索' %>
      <% end %>
  <% end %>
  </div>
</div>
<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user|%>
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image">
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
                  <% end %>
                 </figure>
               </div>
              </div>
             <div class="card-content">
               <div class="media">
                 <div class="media-content">
                    <div class="title"><%= link_to user.username,user_path(user) %></div>
                    </div>

                    </div>
                  <div class="content">
                  投稿数：<%= user.englishes.count %>
                  </div>
                 </div>
               </div>
              </div>
              <% end %>
            </div>
           </div>
       </section>