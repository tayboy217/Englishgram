<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        User Edit
      </h1>
    </div>
  </div>
</section>





<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @user, local: true do |f| %>
         <div class="field">
          <%= f.label :username, class: "label" %>
          <%= f.text_field :username, class: "input" %>
         </div>

         <div class="field">
          <%= f.label :email, class: "label"  %>
          <%= f.text_field :email, class: "input" %>
         </div>

         <div class="field">
          <%= f.label :profile, class: "label" %>
          <%= f.text_field :profile, class: "textarea" %>
         </div>

         <div class="field">
          <%= f.label :profile_image, class: "label" %>
          <%= f.attachment_field :profile_image, class: "input" %>
         </div>

          <%= f.submit "Update", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>